<mapper namespace="apc.sl.collectInfo.cutting.service.impl.CuttingMapper">
	<select id="selectCuttingListToCnt" resultType="int">
		SELECT COUNT(*) FROM sm_estimate
		WHERE 1=1
		<if test="searchKeyword != ''">
			AND es_name LIKE CONCAT ('%', #{searchKeyword}, '%')
		</if>
	</select>
	
	<select id="selectCuttingList" resultType="egovMap">
		SELECT
			a.es_idx,
			a.es_name,
			a.es_com_manager,
			DATE_FORMAT(a.es_fst_qut_dte, '%Y-%m-%d') as es_fst_qut_dte,
			FORMAT(a.es_fst_qut_money, 0) AS es_fst_qut_money,
			DATE_FORMAT(a.es_fnl_qut_dte, '%Y-%m-%d') as es_fnl_qut_dte,
			FORMAT(a.es_fnl_qut_money, 0) AS es_fnl_qut_money,
			b.a_name
		FROM sm_estimate a
		JOIN sm_account b
		ON a.a_idx = b.a_idx
		<if test="searchKeyword != ''">
			AND es_name LIKE CONCAT ('%', #{searchKeyword}, '%')
		</if>
		ORDER BY es_idx DESC
		LIMIT #{recordCountPerPage} OFFSET #{firstIndex}
	</select>
	
	<select id="selectAccountList" resultType="egovMap">
		SELECT
			a_idx,
			a_name
		FROM sm_account
	</select>
	
	<select id="selectProdList" resultType="egovMap">
		SELECT item_cd, item_name FROM sm_item WHERE item_type = '제품'
	</select>
	
	<select id="selectCompanyList" resultType="egovMap">
		SELECT
			c_idx,
			c_name
		FROM sm_company
	</select>
	
	<select id="selectComapnyInfo" resultType="egovMap">
		SELECT
			c_name,
			c_addr,
			c_tel,
			c_fax,
			c_regit_no,
			c_owner,
			c_email
		FROM sm_company
		WHERE c_idx = #{cIdx}
	</select>
	
	<select id="selectProdPerPrice" resultType="egovMap">
		SELECT item_per_price FROM sm_item WHERE item_cd = #{itemCd}
	</select>
	
