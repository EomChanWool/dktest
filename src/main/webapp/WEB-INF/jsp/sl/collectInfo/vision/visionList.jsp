	<script>
		function fn_pageview(pageNo) {
			listForm.pageIndex.value = pageNo;
		   	listForm.submit();
		}
	
		function fn_search_vision(){
			listForm.submit();
		}
	
		function fn_searchAll_vision(){
			listForm.searchKeyword.value = "";
			listForm.pageIndex.value = 1;
			listForm.submit();
		}
	
		function fn_regist_vision(){
			listForm.action = "${pageContext.request.contextPath}/sl/collectInfo/vision/registVision.do";
			listForm.submit();
		}
	
		function fn_modify_vision_go(idx){
			listForm.deIdx.value = idx;
			listForm.action = "${pageContext.request.contextPath}/sl/collectInfo/vision/modifyVision.do";
			listForm.submit();
		}
		
		function fn_detail_vision(idx){
			listForm.idDoc.value = idx;
			listForm.action = "${pageContext.request.contextPath}/sl/collectInfo/vision/detailVision.do";
			listForm.submit();
		}
	
		function fn_delete_vision(deIdx, orIdx, shIdx){
			if(confirm('해당 내역을 삭제 하시겠습니까?')) {
				listForm.deIdx.value = deIdx;
				listForm.orIdx.value = orIdx;
				listForm.shIdx.value = shIdx;
				listForm.action = "${pageContext.request.contextPath}/sl/collectInfo/vision/deleteVision.do";
				listForm.submit();
			}
		}
	
		$(function() {
			$('#collectInfoMenu').addClass("active");
			$('#collectInfo').addClass("show");
			$('#visionList').addClass("active");
			
			let msg = '${msg}';
			if(msg) {
				alert(msg);
			}
		});
	</script>
